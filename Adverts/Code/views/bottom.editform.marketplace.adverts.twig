    var package_prices = {{ packages|json_encode()|raw }};</script>

<style>

    #form_marketplace_adverts h4{
        background:#EEEEEE;
        text-align: center;
        padding:5px;

    }

    .form-field-group{
        clear:both;
    }

    .form-group{
        width: 49%;
        float:left;
    }

    .image-group{
        width: 100%;
    }

    .description-group{
        width: 100%;
    }

    .form-group:nth-child(even){
        float:right;
    }

    .form-group .col-sm-3{
        width: 100%;
        text-align: left !important;
    }

    .form-group .col-sm-9{
        width: 100%;
    }

